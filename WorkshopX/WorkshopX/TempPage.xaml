                        <Label Text="เพศ" />
                        <Entry IsEnabled="False" Text="ชาย" />
                        <Label Text="สัญชาติ" />
                        <Entry IsEnabled="False" Text="ไทย" />
                        <Label Text="อายุ" />
                        <Entry IsEnabled="False" Text="41" />
